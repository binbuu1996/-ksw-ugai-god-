    <script>
        // Language System
        let currentLang = 'my';
        const translations = {};
        function setLang(lang) {
            currentLang = lang;
            document.querySelectorAll('[data-my], [data-en]').forEach(el => {
                el.textContent = el.getAttribute(`data-${lang}`) || el.textContent;
            });
            document.querySelectorAll('.input-god[ data-my-placeholder]').forEach(el => {
                el.placeholder = el.getAttribute(`data-${lang}-placeholder`) || '';
            });
            localStorage.setItem('lang', lang);
        }
        window.onload = () => {
            currentLang = localStorage.getItem('lang') || 'my';
            setLang(currentLang);
        };

        // Audio Context
        let audioContext = null;
        let mediaRecorder = null;
        let recordedChunks = [];
        let tracks = []; // DAW tracks

        // Voice Recording
        async function startVoiceRecord() {
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
            mediaRecorder = new MediaRecorder(stream);
            recordedChunks = [];
            mediaRecorder.ondataavailable = e => recordedChunks.push(e.data);
            mediaRecorder.onstop = processVoiceToStems;
            mediaRecorder.start();
            document.getElementById('voiceStatus').style.display = 'block';
            document.getElementById('voiceStatus').innerHTML = currentLang === 'my' ? 'üé§ ·Äõ·Ä≠·ÄØ·ÄÄ·Ä∫·Äö·Ä∞·Äî·Ä±·Äê·Äö·Ä∫... ·Äõ·Äï·Ä∫·ÄÅ·Äª·ÄÑ·Ä∫·Äõ·ÄÑ·Ä∫ ·ÄÅ·Äú·ÄØ·Äê·Ä∫·Äî·Äæ·Ä≠·Äï·Ä∫' : 'üé§ Recording... Stop to process';
            setTimeout(() => { if (mediaRecorder.state === 'recording') mediaRecorder.stop(); }, 10000); // 10s auto
        }

        // Simulate AI Stem Separation (in real: use Demucs.js or API)
        async function processVoiceToStems() {
            const audioBlob = new Blob(recordedChunks, { type: 'audio/wav' });
            const arrayBuffer = await audioBlob.arrayBuffer();
            const audioBuffer = await audioContext.decodeAudioData(arrayBuffer);
            
            // Simulate stems: split into phrases ~4s each
            const phraseLen = audioBuffer.length / 4;
            const stems = [
                { name: 'Vocals', buffer: audioBuffer, color: '#ff66cc' },
                { name: 'Melody', buffer: audioBuffer, color: '#00ff88' },
                { name: 'Backing', buffer: audioBuffer, color: '#ff0066' }
            ];
            tracks = stems;
            displayTracks();
            document.getElementById('voiceStatus').innerHTML = currentLang === 'my' ? '‚úÖ Stems ·Äõ·Äï·Äº·ÄÆ! DAW ·Äô·Äæ·Ä¨ edit ·Äú·ÄØ·Äï·Ä∫' : '‚úÖ Stems ready! Edit in DAW';
        }

        // DAW Functions
        function openDAW() {
            document.getElementById('daw-container').style.display = 'block';
            initTimeline();
        }

        function displayTracks() {
            const container = document.getElementById('tracks');
            container.innerHTML = '';
            tracks.forEach((track, i) => {
                const div = document.createElement('div');
                div.className = 'track';
                div.style.borderLeft = `4px solid ${track.color}`;
                div.innerHTML = `
                    <i class="fas fa-volume-up"></i> ${track.name}
                    <button onclick="muteTrack(${i})" style="margin-left:auto;"><i class="fas fa-mute"></i></button>
                    <button onclick="soloTrack(${i})"><i class="fas fa-volume-up"></i></button>
                `;
                div.ondblclick = () => playTrack(i);
                container.appendChild(div);
            });
        }

        function initTimeline() {
            const canvas = document.getElementById('waveCanvas');
            const ctx = canvas.getContext('2d');
            ctx.fillStyle = '#333';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            // Draw placeholder waveforms
        }

        function addTrack() {
            const inst = document.getElementById('instrumentSelect').value;
            tracks.push({ name: inst.charAt(0).toUpperCase() + inst.slice(1), buffer: null, color: '#ffd700', synth: createSynth(inst) });
            displayTracks();
        }

        function createSynth(type) {
            if (type === 'synth') return new Tone.Synth().toDestination();
            if (type === 'bass') return new Tone.MembraneSynth().toDestination();
            if (type === 'drums') return new Tone.MembraneSynth({pitchDecay: 0.05}).toDestination();
            // More in full impl
            return new Tone.Synth().toDestination();
        }

        function playTrack(i) {
            // Play track buffer/synth
            console.log('Playing track', i);
            Tone.start();
            tracks[i].synth?.triggerAttackRelease('C4', '8n');
        }

        function muteTrack(i) { tracks[i].muted = !tracks[i].muted; document.querySelectorAll('.track')[i].classList.toggle('mute'); }
        function soloTrack(i) { /* Impl solo */ }

        function togglePluginPanel() {
            document.getElementById('pluginPanel').style.display = document.getElementById('pluginPanel').style.display === 'none' ? 'block' : 'none';
        }

        // God AI Assistant - Advanced Copilot
        const godResponses = {
            '808': () => { addTrack(); return currentLang === 'my' ? '‚úÖ 808 Bass ·Äë·Ää·Ä∑·Ä∫·Äï·Äº·ÄÆ! Sidechain pump ·Äú·Ä≠·ÄØ·ÄÅ·Äª·ÄÑ·Ä∫·Äú·Ä¨·Ä∏?' : '‚úÖ 808 Bass added! Want sidechain pump?'; },
            'reverb': () => { /* Apply Tone.Reverb */ return 'Reverb applied professionally.'; },
            'master': () => { /* Simulate master */ return 'Mastering complete: Loudness -10 LUFS, balanced spectrum.'; },
            // Future ideas: Auto-arrange, genre shift, vocal tune
        };

        function sendGodAI() {
            const input = document.getElementById('god-input');
            const msg = input.value.toLowerCase().trim();
            if (!msg) return;
            addGodMessage('user', msg);
            input.value = '';

            setTimeout(() => {
                let response = currentLang === 'my' ? '·Äò·ÄØ·Äõ·Ä¨·Ä∏ AI ·Äî·Ä≤·Ä∑ ·Äñ·Äî·Ä∫·Äê·ÄÆ·Ä∏·Äî·Ä±·Äê·Äö·Ä∫...' : 'God AI creating...';
                if (msg.includes('808') || msg.includes('bass')) response = godResponses['808']();
                else if (msg.includes('reverb') || msg.includes('echo')) response = godResponses['reverb']();
                else if (msg.includes('master') || msg.includes('mix')) response = godResponses['master']();
                else if (msg.includes('drop')) {
                    response = currentLang === 'my' ? 'üî• Festival Drop ·Äë·Ää·Ä∑·Ä∫·Äï·Äº·ÄÆ! BPM 128, build-up + white noise' : 'üî• Festival Drop added! BPM 128, build-up + white noise';
                    // Add drop elements
                } else {
                    response = currentLang === 'my' ? 'Pro tip: "add 808 bass", "increase energy", "Myanmar pop vocal chop" ·Äï·Äº·Ä±·Ä¨' : 'Pro tip: "add 808 bass", "increase energy", "Myanmar pop vocal chop"';
                }
                addGodMessage('ai', response);
                // Auto apply effects based on cmd
            }, 1000);
        }

        function addGodMessage(type, text) {
            const messages = document.getElementById('god-messages');
            const div = document.createElement('div');
            div.className = `god-msg god-${type}`;
            div.textContent = `${type === 'user' ? (currentLang === 'my' ? '·Äû·ÄÑ·Ä∫:' : 'You:') : (currentLang === 'my' ? 'God AI:' : 'God AI:')} ${text}`;
            messages.appendChild(div);
            messages.scrollTop = messages.scrollHeight;
        }

        // Other functions (generateText, godMode, etc. enhanced similarly)
        function generateText() {
            // Simulate with Tone.js patterns
            Tone.start();
            const synth = new Tone.Synth().toDestination();
            const loop = new Tone.Loop((time) => { synth.triggerAttackRelease("C4 E4 G4", "8n", time); }, "4n").start(0);
            Tone.Transport.start();
            setTimeout(() => Tone.Transport.stop(), 5000);
        }

        function godMode() {
            document.getElementById('godStatus').innerHTML = `
                <div style="color:#ffd700;font-size:1.6rem;animation:pulse 1s infinite;">
                    üëë <strong>GOD MODE ACTIVATED - Unlimited Pro Production</strong> üëë
                    <small>${currentLang === 'my' ? '·Äò·Äö·Ä∫·Äú·Ä±·Ä¨·ÄÄ·Ä∫·Äñ·Äî·Ä∫·Äê·ÄÆ·Ä∏·Äõ·ÄÑ·Ä∫·Ä∏ ·Äò·Äö·Ä∫·Äú·Ä±·Ä¨·ÄÄ·Ä∫·Äñ·Äî·Ä∫·Äê·ÄÆ·Ä∏·Äï·Ä´' : 'Create unlimited - Forever Free'}</small>
                </div>`;
            document.getElementById('god-chat').style.display = 'block';
        }

        function downloadStems(filename) {
            alert(`Downloading PRO stems: ${filename} (Vocals, Drums, Bass, Melody, FX)`);
            // Real: JSZip + export buffers
        }

        function exportProject() {
            alert('Exporting pro mix as WAV... (Full master ready)');
            // Real: OfflineAudioContext render
        }

        // Original functions (generateHum, toggleChatbot, sendMessage) - keep and enhance similarly
        function generateHum() { /* Existing */ }
        function toggleChatbot() { /* Existing */ }

        // Habit Guide Modal (on load or button)
        // Add button to show step-by-step habit building
    </script>
